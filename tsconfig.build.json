{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/types",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declaration": true,
    "isolatedModules": true,
    "incremental": true,
    "tsBuildInfoFile": "./.buildcache/lib.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/**/__tests__",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
